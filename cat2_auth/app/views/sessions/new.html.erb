<h1>Log In!</h1>

<form action="<%= sessions_url %>" method="POST">
  <input type="hidden"
         name="authenticity_token"
        value="<%= form_authenticity_token %>">
  <label for="users_username">Username</label>
  <input type="text" id="users_username" name="user[username]">
  <label for="users_password">Password</label>
  <input type="password" id="users_password" name="user[password]">
  <input type="submit" value="Log In">
</form>
